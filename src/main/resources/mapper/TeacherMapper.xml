        insert into teacher
        <trim prefix="(" suffix=")" suffixOverrides=",">
                <if test="tname != null">tName,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
                <if test="tname != null">#{tname,jdbcType=VARCHAR},</if>
        </trim>
    </insert>
